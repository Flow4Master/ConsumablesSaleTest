@model IEnumerable<ConsumablesSaleTest.Models.Developer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список производителей</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Developer" asp-action="Create" class="btn btn-primary">
                <i class="las la-lg la-plus"></i> Добавить производителя
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название производителя
                    </th>
                    <th class="text-center">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="80%">@item.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Developer" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-1">
                                    <i class="lar la-lg la-edit"></i>
                                </a>
                                <a asp-controller="Developer" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="lar la-lg la-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p>Несуществующий производитель</p>
    }
</div>

