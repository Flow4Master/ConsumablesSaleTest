@model IEnumerable<ConsumablesSaleTest.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Каталог товаров</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="las la-lg la-plus"></i> Добавить товар
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название товара
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Тип расходника
                    </th>
                    <th>
                        Совместимость
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.Name</td>
                        <td width="15%">@item.Price</td>
                        <td width="25%">@item.Type.Name</td>
                        <td width="15%">@item.Developer.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary mx-1">
                                    <i class="lar la-lg la-edit"></i>
                                </a>
                                <a asp-controller="Product" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="lar la-lg la-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Список пуст</p>
    }
</div>


