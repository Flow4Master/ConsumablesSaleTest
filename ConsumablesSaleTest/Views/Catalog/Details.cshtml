@model ConsumablesSaleTest.Models.ViewModels.DetailsVM

@{
    ViewData["Title"] = "Купить картридж - Характеристики картриджа";
}

<div class="">
    <form method="post">
        <input asp-for="@Model.Product.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">@string.Format("{0:c0}", Model.Product.Price)</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Constant.ImagePath@Model.Product.Img" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <table class="table">
  
                                        <tbody>
                                            <tr>
                                                <th scope="row">Артикул:</th>
                                                <td>@Model.Product.ArticleNumber</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Тип расходника:</th>
                                                <td>@Model.Product.Original</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Для аппаратов:</th>
                                                <td>@Model.Product.Developer.Name</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Цвет:</th>
                                                <td>@Model.Product.Color</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Ресурс, стр:</th>
                                                <td>@Model.Product.Resource</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Совместим с аппаратами:</th>
                                                <td>@Model.Product.Compatibility</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="pl-2">
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Назад</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.InCard)
                            {
                                <a asp-action="RemoveFromCard" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Удалить из корзины</a>
                            }
                            else
                            {
                                <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Добавить в корзину</button>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

